<%- include('../partials/header.ejs')%>
<div class="fieldset">
  <h4 class="newEventTitle">Add a new event!!!</h4>
  <form action="/events" method="POST" class="new-form">
    <table>
      <p>
        <label for="author">Author</label>
        <input type="text" id="author" name="author" placeholder="Author" />
      </p>
      <p>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" placeholder="Title" />
      </p>
      <p>
        <label for="location">Location</label>
        <input type="text" id="title" name="location" placeholder="location" />
      </p>
      <p>
        <label for="food">Food Provided</label>
        <input type="text" id="title" name="food" placeholder="dish" />
      </p>
      <p>
        <label for="category">Event Type</label>
        <select name="category" id="category">
          <option value="Tournament">Tournament</option>
          <option value="Training">Training</option>
        </select>
      </p>
      <p>
        <p>Upload a picture</p>
        <label for="image">Image</label>
        <input type="file" id="image" name="image"><br>
        <span>* Max allowed file size is 2MB</span>
        <br><br>
      </p>
      <p>
        <label for="content" placeholder="Event Details">Content</label>
      </p>
      <p>
        <textarea
          rows="5"
          id="content"
          name="content"
          class="fixed-width"
        ></textarea>
      </p>
    </table>
    <input type="submit" value="Submit" />
  </form>
</div>
<%- include('../partials/footer.ejs')%>
